{
  "name": "beatonma.org",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "beatonma.org",
  "scripts": {
    "build": "gulp production",
    "buildTest": "gulp test",
    "watch": "gulp dev",
    "jest": "jest",
    "gulp": "gulp"
  },
  "typings": "./types",
  "keywords": [
    "beatonma"
  ],
  "author": "Michael Beaton",
  "license": "ISC",
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.2%"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "tabWidth": 4,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "custom-property-empty-line-before": null,
      "color-hex-length": "long",
      "color-hex-case": "lower",
      "selector-id-pattern": null
    }
  },
  "devDependencies": {
    "@swc/core": "^1.3",
    "@swc/jest": "^0.2.37",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/browser-sync": "^2.29.0",
    "@types/glob": "^8.1",
    "@types/gulp": "^4.0.7",
    "@types/gulp-autoprefixer": "^0.0.37",
    "@types/gulp-if": "^3.0.1",
    "@types/gulp-postcss": "^8.0.1",
    "@types/gulp-rename": "^2.0.1",
    "@types/gulp-sass": "^5.0.1",
    "@types/node": "^22.9",
    "@types/react": "^18.2",
    "@types/react-dom": "^18.2",
    "@types/vinyl-named": "^1.1.1",
    "@types/webpack-stream": "^3.2.8",
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.3",
    "cssnano": "^7.0.6",
    "cypress": "^13.14.2",
    "gulp": "^5.0",
    "gulp-if": "^3.0",
    "gulp-postcss": "^10.0",
    "gulp-rename": "^2.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass": "^5.1",
    "jest": "^29.7",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.0",
    "sass": "^1.69.7",
    "stylelint": "^16.15",
    "stylelint-config-standard-scss": "^14.0.0",
    "swc-loader": "^0.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vinyl-named": "^1.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-stream": "^7.0"
  }
}
